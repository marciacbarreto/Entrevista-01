                            h('span', { className: 'text-4xl' }, 'âœ¨')
                        ),
                        h('h1', { className: 'text-4xl font-bold text-gray-900 mb-3' }, 'Entrevista IA'),
                        h('p', { className: 'text-lg text-gray-600' }, 'Respostas inteligentes em tempo real para sua entrevista')
