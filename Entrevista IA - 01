<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Entrevista IA - Login Seguro</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
</head>
<body class="bg-gradient-to-br from-indigo-50 via-white to-purple-50 min-h-screen">
  <div id="app"></div>

  <script>
    const { useState, useEffect, createElement: h } = React;

    // ======================================================
    // 1Ô∏è‚É£ LOGIN SEGURO
    // ======================================================
    function App() {
      const [isLoggedIn, setIsLoggedIn] = useState(false);
      const [email, setEmail] = useState("");
      const [senha, setSenha] = useState("");
      const [erro, setErro] = useState("");

      const loginCorreto = "admin@entrevistaia.com";
      const senhaCorreta = "2025ia";

      const handleLogin = () => {
        if (email === loginCorreto && senha === senhaCorreta) {
          setIsLoggedIn(true);
          setErro("");
        } else {
          setErro("E-mail ou senha incorretos. Tente novamente.");
        }
      };

      if (!isLoggedIn) {
        return h("div", { className: "flex items-center justify-center min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50" },
          h("div", { className: "bg-white p-8 rounded-2xl shadow-lg w-full max-w-sm" },
            h("h1", { className: "text-3xl font-bold text-center text-indigo-700 mb-6" }, "üîí Entrar no Entrevista IA"),
            h("input", {
              type: "email",
              placeholder: "E-mail",
              value: email,
              onChange: (e) => setEmail(e.target.value),
              className: "w-full mb-4 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
            }),
            h("input", {
              type: "password",
              placeholder: "Senha",
              value: senha,
              onChange: (e) => setSenha(e.target.value),
              className: "w-full mb-4 px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent"
            }),
            erro && h("p", { className: "text-red-500 text-sm mb-4 text-center" }, erro),
            h("button", {
              onClick: handleLogin,
              className: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold hover:from-indigo-700 hover:to-purple-700 transition-all"
            }, "Entrar")
          )
        );
      }

      // üîΩ Ap√≥s login, carrega o app completo
      return h(EntrevistaIA);
    }

    // ======================================================
    // 2Ô∏è‚É£ ENTREVISTA IA - APLICA√á√ÉO COMPLETA
    // ======================================================
    function EntrevistaIA() {
      const [curriculo, setCurriculo] = useState('');
      const [vaga, setVaga] = useState('');
      const [pergunta, setPergunta] = useState('');
      const [resposta, setResposta] = useState('');
      const [etapa, setEtapa] = useState('upload');

      // Processar curr√≠culo e vaga antes de iniciar entrevista
      const handleIniciar = () => {
        if (!curriculo.trim() || !vaga.trim()) return;
        setEtapa('entrevista');
      };

      // Gerar resposta simulada
      const gerarResposta = () => {
        if (!pergunta.trim()) return;
        const respostas = [
          "Com base na minha experi√™ncia, acredito que posso contribuir com resultados consistentes e inova√ß√£o.",
          "Tenho foco em resultados, trabalho em equipe e constante aprimoramento t√©cnico.",
          "Sou comprometido com prazos e qualidade, sempre buscando superar expectativas."
        ];
        const aleatoria = respostas[Math.floor(Math.random() * respostas.length)];
        setResposta(aleatoria);
      };

      // P√°gina 1 - Upload de curr√≠culo e vaga
      if (etapa === 'upload') {
        return h("div", { className: "flex flex-col items-center justify-center min-h-screen p-6 bg-gradient-to-br from-indigo-50 via-white to-purple-50" },
          h("div", { className: "bg-white p-8 rounded-2xl shadow-xl w-full max-w-2xl" },
            h("h1", { className: "text-3xl font-bold text-center text-indigo-700 mb-6" }, "üìÑ Entrevista IA - Configura√ß√£o"),
            h("p", { className: "text-gray-600 mb-4 text-center" }, "Adicione seu curr√≠culo e a descri√ß√£o da vaga para gerar respostas personalizadas."),
            h("textarea", {
              className: "w-full h-40 p-3 border border-gray-300 rounded-lg mb-4 focus:ring-2 focus:ring-indigo-500",
              placeholder: "Cole aqui seu curr√≠culo...",
              value: curriculo,
              onChange: (e) => setCurriculo(e.target.value)
            }),
            h("textarea", {
              className: "w-full h-40 p-3 border border-gray-300 rounded-lg mb-6 focus:ring-2 focus:ring-indigo-500",
              placeholder: "Cole aqui a descri√ß√£o da vaga...",
              value: vaga,
              onChange: (e) => setVaga(e.target.value)
            }),
            h("button", {
              onClick: handleIniciar,
              className: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold hover:from-indigo-700 hover:to-purple-700 transition-all"
            }, "üöÄ Iniciar Entrevista")
          )
        );
      }

      // P√°gina 2 - Entrevista em tempo real
      return h("div", { className: "flex flex-col items-center min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 p-6" },
        h("div", { className: "bg-white rounded-2xl shadow-xl p-8 w-full max-w-3xl" },
          h("h1", { className: "text-3xl font-bold text-indigo-700 text-center mb-4" }, "üé§ Entrevista IA"),
          h("p", { className: "text-gray-600 text-center mb-8" }, "Digite ou fale sua pergunta para receber uma resposta inteligente."),
          h("textarea", {
            className: "w-full h-32 p-3 border border-gray-300 rounded-lg mb-4 focus:ring-2 focus:ring-indigo-500",
            placeholder: "Digite a pergunta do recrutador...",
            value: pergunta,
            onChange: (e) => setPergunta(e.target.value)
          }),
          h("button", {
            onClick: gerarResposta,
            className: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white py-3 rounded-lg font-semibold mb-6 hover:from-indigo-700 hover:to-purple-700 transition-all"
          }, "üí¨ Gerar Resposta"),
          resposta && h("div", { className: "p-4 bg-indigo-50 rounded-lg border border-indigo-200 text-gray-800" }, resposta)
        )
      );
    }

    // ======================================================
    // 3Ô∏è‚É£ INICIALIZA√á√ÉO
    // ======================================================
    const root = ReactDOM.createRoot(document.getElementById("app"));
    root.render(h(App));
  </script>
</body>
</html>
