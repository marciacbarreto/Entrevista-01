                    await new Promise(resolve => setTimeout(resolve, step.delay));
                    setProgress(step.progress);
                }

                const id = Math.random().toString(36).substring(2, 14);
                setSessionId(id);

                setAnalysisData({
                    matchScore: 87,
                    keySkills: ['LideranÃ§a', 'ComunicaÃ§Ã£o', 'GestÃ£o de Projetos'],
                    strongPoints: ['ExperiÃªncia relevante', 'FormaÃ§Ã£o alinhada']
                });

                setTimeout(() => setStage('interview'), 500);
            };

            const generateAnswer = async (userQuestion) => {
                setIsProcessing(true);
                
                await new Promise(resolve => setTimeout(resolve, 2000));

                const answers = {
                    'fortes|forte|qualidades|pontos fortes': {
                        text: 'Meus principais pontos fortes sÃ£o lideranÃ§a de equipes multidisciplinares, capacidade analÃ­tica para resolver problemas complexos e excelente comunicaÃ§Ã£o interpessoal. Durante minha experiÃªncia anterior, liderei um projeto que aumentou a eficiÃªncia operacional em 35%, demonstrando minha habilidade de gestÃ£o e orientaÃ§Ã£o para resultados. AlÃ©m disso, sou reconhecido pela capacidade de adaptar-me rapidamente a novos ambientes e tecnologias.',
                        bullets: [
                            'LideranÃ§a de equipes com resultados mensurÃ¡veis (+35% eficiÃªncia)',
                            'Forte capacidade analÃ­tica e resoluÃ§Ã£o de problemas',
                            'Excelente comunicaÃ§Ã£o e adaptabilidade'
                        ]
                    },
                    'contratar|contrataÃ§Ã£o|escolher vocÃª': {
                        text: 'VocÃª deve me contratar porque combino experiÃªncia tÃ©cnica sÃ³lida com habilidades de lideranÃ§a comprovadas, alinhadas perfeitamente aos requisitos desta vaga. Meu histÃ³rico demonstra resultados consistentes: no Ãºltimo projeto, implementei uma soluÃ§Ã£o que gerou economia de R$ 200 mil anuais. AlÃ©m disso, minha paixÃ£o pelo setor e minha capacidade de trabalhar colaborativamente me tornam um profissional que agrega valor desde o primeiro dia.',
                        bullets: [
                            'ExperiÃªncia tÃ©cnica + habilidades de lideranÃ§a alinhadas Ã  vaga',
                            'HistÃ³rico de resultados concretos (R$ 200k economia)',
                            'Capacidade de gerar valor imediato para a empresa'
                        ]
                    },
                    'fraco|fracos|fraqueza|melhorar': {
                        text: 'Um aspecto que venho desenvolvendo ativamente Ã© delegar tarefas de forma mais estratÃ©gica. No passado, tinha tendÃªncia a assumir muitas responsabilidades, mas percebi que isso limitava o crescimento da equipe. Implementei um sistema de mentoria que me ajudou a equilibrar melhor minha carga de trabalho enquanto desenvolvo os talentos do time. Hoje, vejo essa transformaÃ§Ã£o como um ponto de crescimento profissional significativo.',
                        bullets: [
                            'Trabalho ativo no desenvolvimento da delegaÃ§Ã£o estratÃ©gica',
                            'Implementei sistema de mentoria para equilibrar responsabilidades',
                            'Transformei limitaÃ§Ã£o em oportunidade de crescimento da equipe'
                        ]
                    },
                    'default': {
                        text: 'Essa Ã© uma excelente pergunta. Com base na minha experiÃªncia e nas competÃªncias valorizadas por esta vaga, acredito que posso contribuir significativamente para os objetivos da empresa. Meu histÃ³rico demonstra consistÃªncia em entregar resultados, trabalhar colaborativamente e buscar sempre a excelÃªncia. Estou genuinamente entusiasmado com a possibilidade de aplicar minhas habilidades neste desafio.',
                        bullets: [
                            'ExperiÃªncia alinhada aos requisitos da vaga',
                            'HistÃ³rico consistente de resultados',
                            'Entusiasmo genuÃ­no pela oportunidade'
                        ]
                    }
                };

                let selectedAnswer = answers.default;
                for (const [pattern, answer] of Object.entries(answers)) {
                    if (pattern !== 'default') {
                        const regex = new RegExp(pattern, 'i');
                        if (regex.test(userQuestion)) {
                            selectedAnswer = answer;
                            break;
                        }
                    }
                }

                const newAnswer = {
                    question: userQuestion,
                    answer: selectedAnswer.text,
                    bullets: selectedAnswer.bullets,
                    timestamp: new Date().toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit' })
